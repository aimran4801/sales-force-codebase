<apex:page sidebar="false">
   <h1> Station Status</h1>
   <apex:form id="engineReadinessChecklist">
      <apex:pageBlock title="Station Status Checklist">
         <!--First Section-->
         <apex:pageBlockSection title="Engines">
            <!--Adding Checkboxes-->
            <apex:inputCheckbox immediate="true"/>Engine 1
            <apex:inputCheckbox immediate="true"/>Engine 2
            <apex:inputCheckbox immediate="true"/>Engine 3
            <apex:inputCheckbox immediate="true"/>Engine 4
            <apex:inputCheckbox immediate="true"/>Engine 5
            <apex:inputCheckbox immediate="true"/>Engine 6
         </apex:pageBlockSection>
         <!--Second Section-->
         <apex:pageBlockSection title="Vaccum Section">
            <apex:inputCheckbox immediate="true"/>Vaccum 1
            <apex:inputCheckbox immediate="true"/>Vaccum 2
            <apex:inputCheckbox immediate="true"/>Vaccum 3
            <apex:inputCheckbox immediate="true"/>Vaccum 4
            <apex:inputCheckbox immediate="true"/>Vaccum 5
            <apex:inputCheckbox immediate="true"/>Vaccum 6
         </apex:pageBlockSection>
         <apex:pageBlockButtons >
            <!--Adding Save Button-->
            <apex:commandButton value="Save" action="{!save}"/>
         </apex:pageBlockButtons>
      </apex:pageBlock>
   </apex:form>
</apex:page>